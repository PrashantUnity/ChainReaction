<div class="container"
     style="background-color:transparent;@("width:{GetWidth()};height:{GetWidth()};");border-color:@($"{Config.CurrentUserColor}") ">
    @* <div class="center-text">@cell.CurrentCount</div> *@
    <svg width="@GetWidth()" height="@GetWidth()" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <!-- Define the circular path -->
        <path id="circlePath" fill="none" stroke="none" d="M100,100 m-50,0 a50,50 0 1,0 100,0 a50,50 0 1,0 -100,0" />
        <!-- First Circle -->
        @if (cell.CurrentCount > 0)
        {
            <!-- First circle that will move along the path -->
            <circle cx="0" cy="0" r="20" fill="@($"{cell.Color}")">
                <animateMotion dur=".72s" repeatCount="indefinite">
                    <mpath xlink:href="#circlePath" />
                </animateMotion>
            </circle>
        }

        <!-- Second Circle -->
        @if (cell.CurrentCount > 1)
        {
            <circle cx="0" cy="0" r="20" fill="@($"{cell.Color}")">
                <animateMotion dur=".72s" repeatCount="indefinite" begin="-0.24s">
                    <mpath xlink:href="#circlePath" />
                </animateMotion>
            </circle>
        }
        <!-- Third Circle -->
        @if (cell.CurrentCount > 2)
        {
            <circle cx="0" cy="0" r="20" fill="@($"{cell.Color}")">
                <animateMotion dur=".72s" repeatCount="indefinite" begin="-0.48s">
                    <mpath xlink:href="#circlePath" />
                </animateMotion>
            </circle>
        }
    </svg>
</div>

@code {
    [Parameter] public Cell cell { get; set; }
    [Parameter] public string cellWidth { get; set; }

    string GetWidth()
    {
        return cellWidth;
    }

}

<style>
    .container {
        position: relative;
        border-width: 2px;
        
    }

    .center-text {
        position: absolute;
        font-size: 24px;
    }
</style>